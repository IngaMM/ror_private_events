<h1>User data</h1>

<div>
  <%= @user.name %>
</div>
<br>
<div>
<strong>Events created by <%= @user.name %>:</strong>
<ul>
  <% @created_events.each do |event| %>
    <li>
      <%=event.description%>&nbsp &nbsp
      <% if current_user == @user %>
        <%=link_to "Invite another user", {:controller => "invitations", :action => "new", :event_description => event.description }%>
      <% end %>
    </li>
  <% end %>
</ul>
</div>
<br>
<div>
<strong>Upcoming events that <%= @user.name %> is invited for:</strong>
<ul>
  <% @upcoming_events.each do |event| %>
    <li>
      <%=event.description%>
    </li>
  <% end %>
</ul>
</div>
<br>
<div>
<strong>Previous events that <%= @user.name %> was invited for:</strong>
<ul>
  <% @previous_events.each do |event| %>
    <li>
      <%=event.description%>
    </li>
  <% end %>
</ul>
</div>
